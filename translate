#!/usr/bin/env python
# -*- coding: utf-8 -*-
import argparse
import sys
from translateDoc import mkTranslateDoc

def main():
    parser = argparse.ArgumentParser(description='Python Google mkTranslator as a command-line tool')
    parser.add_argument('-p','--path',action='store',dest='file_path', help='The path of the file to be translated. (Default: ./)')
    parser.add_argument('-d','--dest',action='store',dest='dest_language',default='en',help='The destination language you want to translate. (Default: en)')
    parser.add_argument('-l','--language',action='store',dest='current_language',help='setting language will give priority to \'i18ns.com\' translationset language will use. ')
    args = parser.parse_args()
    translator = mkTranslateDoc()
    result = translator.translate_doc( filepath=args.file_path, destination=args.dest_language,language=args.current_language)

if __name__ == '__main__':
    main()

